@page "/exercise"   
@inject HttpClient Http  

<h3 class="mt-4">üèÉ Exercise Logs</h3>

@if (logs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Activity</th>
                <th>Duration (min)</th>
                <th>Calories Burned</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td>@log.date.ToShortDateString()</td>
                    <td>@log.activity</td>
                    <td>@log.duration</td>
                    <td>@log.caloriesBurned</td>
                    <td>@log.userProfile?.name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public class ExerciseLog
    {
        public DateTime date { get; set; }
        public string activity { get; set; } = "";
        public double duration { get; set; }
        public double caloriesBurned { get; set; }
        public UserProfile? userProfile { get; set; }
    }

    public class UserProfile
    {
        public string name { get; set; } = "";
    }

    List<ExerciseLog>? logs;

    protected override async Task OnInitializedAsync()
    {
        logs = await Http.GetFromJsonAsync<List<ExerciseLog>>("https://localhost:5038/api/exerciselog");
    }
}